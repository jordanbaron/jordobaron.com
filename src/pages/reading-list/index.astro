---
import Layout from "../../layouts/Layout.astro";
import { getReadingList } from "../../lib/pocketbase";
import type { ReadingListResponse } from "../../lib/pocketbase-types";
import BookIcon from "../../components/BookIcon.astro";
import WebIcon from "../../components/WebIcon.astro";

const items = await getReadingList();

const wantToRead: ReadingListResponse[] = [];
const currentlyReading: ReadingListResponse[] = [];
const readByMonth: Record<string, ReadingListResponse[]> = {};

items.forEach((item) => {
  if (item.reading) {
    currentlyReading.push(item);
  } else if (!item.readAt) {
    wantToRead.push(item);
  } else {
    const date = new Date(item.readAt);
    const monthKey = date.toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
    });

    if (!readByMonth[monthKey]) {
      readByMonth[monthKey] = [];
    }
    readByMonth[monthKey].push(item);
  }
});

const months = Object.keys(readByMonth).sort((a, b) => {
  const dateA = new Date(a);
  const dateB = new Date(b);
  return dateB.getTime() - dateA.getTime();
});
---

<Layout title="Reading List">
  <div class="flex flex-col gap-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl md:text-4xl font-bold font-garamond">
          Reading List
        </h1>
        <p class="text-text-muted mt-2">
          Articles and books I've been reading or want to read.
        </p>
      </div>
    </div>

    {
      items.length === 0 ? (
        <p class="text-text-muted">Nothing here yet.</p>
      ) : (
        <>
          {currentlyReading.length > 0 && (
            <section class="flex flex-col gap-4">
              <h2 class="text-2xl font-semibold text-text-muted font-garamond">
                Currently Reading
              </h2>
              <ul class="flex flex-col gap-3">
                {currentlyReading.map((item) => (
                  <li class="flex flex-col">
                    <div class="flex items-center gap-1">
                      <span class="flex items-center">
                        {item.type === "book" ? <BookIcon /> : <WebIcon />}
                      </span>
                      {item.url ? (
                        <a
                          href={item.url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="text-text underline hover:text-white transition-colors"
                        >
                          {item.title}
                        </a>
                      ) : (
                        <span class="text-text">{item.title}</span>
                      )}
                      {item.author && (
                        <span class="text-text">by {item.author}</span>
                      )}
                    </div>
                  </li>
                ))}
              </ul>
            </section>
          )}

          {wantToRead.length > 0 && (
            <section class="flex flex-col gap-4">
              <h2 class="text-2xl font-semibold text-text-muted font-garamond">
                Want to read
              </h2>
              <ul class="flex flex-col gap-3">
                {wantToRead.map((item) => (
                  <li class="flex flex-col">
                    <div class="flex items-center gap-1">
                      <span class="flex items-center">
                        {item.type === "book" ? <BookIcon /> : <WebIcon />}
                      </span>
                      {item.url ? (
                        <a
                          href={item.url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="text-text underline hover:text-white transition-colors"
                        >
                          {item.title}
                        </a>
                      ) : (
                        <span class="text-text">{item.title}</span>
                      )}
                      {item.author && (
                        <span class="text-text">by {item.author}</span>
                      )}
                    </div>
                  </li>
                ))}
              </ul>
            </section>
          )}

          {months.length > 0 && (
            <section class="flex flex-col gap-4">
              <h2 class="text-2xl font-semibold text-text-muted font-garamond">
                Read
              </h2>
              {months.map((month) => (
                <div class="flex flex-col gap-3">
                  <h3 class="text-lg font-semibold text-text-muted font-garamond">
                    {month}
                  </h3>
                  <ul class="flex flex-col gap-3">
                    {readByMonth[month].map((item) => (
                      <li class="flex flex-col">
                        <div class="flex items-center gap-1">
                          <span class="flex items-center">
                            {item.type === "book" ? <BookIcon /> : <WebIcon />}
                          </span>
                          {item.url ? (
                            <a
                              href={item.url}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="text-text underline hover:text-white transition-colors"
                            >
                              {item.title}
                            </a>
                          ) : (
                            <span class="text-text">{item.title}</span>
                          )}
                          {item.author && (
                            <span class="text-text">by {item.author}</span>
                          )}
                        </div>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </section>
          )}
        </>
      )
    }
  </div>
</Layout>
