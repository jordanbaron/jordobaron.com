---
import Layout from "../../layouts/Layout.astro";
import ReadingListForm from "../../components/ReadingListForm.astro";
import { actions } from "astro:actions";

if (!Astro.locals.session) {
  return Astro.redirect("/reading-list/login");
}

const result = Astro.getActionResult(actions.createReadingListItem);
if (result && !result.error) {
  return Astro.redirect("/reading-list/dashboard");
}
---

<Layout title="Add to Reading List">
  <div class="flex flex-col gap-6">
    <h1 class="text-2xl md:text-4xl font-bold font-garamond">Add to Reading List</h1>

    {result?.error && (
      <div class="bg-red-900/50 border border-red-700 text-red-200 px-4 py-3 rounded">
        {result.error.message || "Failed to create item"}
      </div>
    )}

    <ReadingListForm
      action={actions.createReadingListItem}
      submitLabel="Add to Reading List"
    />
  </div>
</Layout>
